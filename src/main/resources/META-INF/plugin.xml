<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.gitcodeowners</id>
    <name>Git Codeowners</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Git Codeowners File"
                implementationClass="com.github.xepozz.gitcodeowners.language.CodeownersFileType"
                extensions=""
                language="Codeowners"
                fileNames="CODEOWNERS"/>
        <lang.parserDefinition
                language="Codeowners"
                implementationClass="com.github.xepozz.gitcodeowners.language.parser.CodeownersParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Codeowners"
                implementationClass="com.github.xepozz.gitcodeowners.language.CodeownersSyntaxHighlighterFactory"/>
        <annotator
                language="Codeowners"
                implementationClass="com.github.xepozz.gitcodeowners.language.CodeownersAnnotator"/>

        <!--        <lang.psiStructureViewFactory-->
        <!--                language="Codeowners"-->
        <!--                implementationClass="com.github.xepozz.gitcodeowners.ide.structureView.CodeownersStructureViewFactory"/>-->
        <!--        <runLineMarkerContributor-->
        <!--                language="Codeowners"-->
        <!--                implementationClass="com.github.xepozz.gitcodeowners.ide.CodeownersRunCommandMarkerContributor"/>-->
        <!--        <lang.foldingBuilder-->
        <!--                language="Codeowners"-->
        <!--                implementationClass="com.github.xepozz.gitcodeowners.ide.CronScheduleFoldingBuilder"/>-->
        <lang.documentationProvider
                language="Codeowners"
                implementationClass="com.github.xepozz.gitcodeowners.ide.documentation.CodeownersDocumentationProvider"/>
        <lang.commenter
                language="Codeowners"
                implementationClass="com.github.xepozz.gitcodeowners.ide.CodeownersCommenter"/>
        <!--        <localInspection-->
        <!--                language="Codeowners" enabledByDefault="true" level="ERROR"-->
        <!--                groupName="Codeowners schedule" displayName="Codeowners schedule"-->
        <!--                implementationClass="com.github.xepozz.gitcodeowners.ide.inspections.CodeownersScheduleTimeRangeInspection"/>-->
        <psi.referenceContributor
                language="Codeowners"
                implementation="com.github.xepozz.gitcodeowners.ide.reference.CodeownersReferenceContributor"/>
        <completion.contributor
                language="Codeowners"
                implementationClass="com.github.xepozz.gitcodeowners.ide.completion.CodeownersCompletionContributor"/>
        <codeInsight.lineMarkerProvider
                language="Codeowners"
                implementationClass="com.github.xepozz.gitcodeowners.ide.CodeownersLineMarkerProvider"/>
        <highlightRangeExtension
                implementation="com.github.xepozz.gitcodeowners.ide.IgnoreHighlightRangeExtension" />
        <highlightUsagesHandlerFactory
            implementation="com.github.xepozz.gitcodeowners.ide.CodeownersHighlightUsagesHandlerFactory" />
        <lang.elementManipulator
                forClass="com.github.xepozz.gitcodeowners.language.psi.impl.CodeownersElementImpl"
                implementationClass="com.github.xepozz.gitcodeowners.language.psi.CodeownersElementManipulator" />

        <!--        <intentionAction>-->
        <!--            <language>Codeowners</language>-->
        <!--            <className>com.github.xepozz.gitcodeowners.ide.actions.CodeownersGuruIntention</className>-->
        <!--            <category>Codeowners intentions</category>-->
        <!--        </intentionAction>-->
    </extensions>
</idea-plugin>
