<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.gitcodeowners</id>
    <name>Git Codeowners</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Git Attributes File"
                implementationClass="com.github.xepozz.gitcodeowners.language.GitCodeownersFileType"
                fieldName="INSTANCE"
                language="GitCodeowners"
                fileNames="CODEOWNERS"
        />
        <lang.parserDefinition
                language="GitCodeowners"
                implementationClass="com.github.xepozz.gitcodeowners.language.parser.GitCodeownersParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="GitCodeowners"
                implementationClass="com.github.xepozz.gitcodeowners.language.GitCodeownersSyntaxHighlighterFactory"/>
        <annotator
                language="GitCodeowners"
                implementationClass="com.github.xepozz.gitcodeowners.language.GitCodeownersAnnotator"/>
        <multiHostInjector
                implementation="com.github.xepozz.gitcodeowners.language.GitCodeownersLanguageInjector"/>

